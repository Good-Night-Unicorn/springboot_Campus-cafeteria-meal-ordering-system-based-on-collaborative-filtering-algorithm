<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.MeishiDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.MeishiEntity" id="meishiMap">
        <result property="name" column="name"/>
        <result property="picture" column="picture"/>
        <result property="address" column="address"/>
        <result property="score" column="score"/>
        <result property="price" column="price"/>
        <result property="recommentcount" column="recommentcount"/>
        <result property="laiyuan" column="laiyuan"/>
        <result property="dianpin" column="dianpin"/>
        <result property="description" column="description"/>
        <result property="phone" column="phone"/>
        <result property="caixi" column="caixi"/>
        <result property="yinyetime" column="yinyetime"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.MeishiVO" >
		SELECT * FROM meishi  meishi         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.MeishiVO" >
		SELECT  meishi.* FROM meishi  meishi 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.MeishiView" >

		SELECT  meishi.* FROM meishi  meishi 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.MeishiView" >
		SELECT * FROM meishi  meishi <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM meishi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM meishi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM meishi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM meishi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM meishi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>



</mapper>
